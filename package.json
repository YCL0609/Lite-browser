{
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12"
  },
  "name": "lite-browser",
  "version": "2.2.2",
  "description": "A browser for lightweight web environments",
  "main": "main.js",
  "scripts": {
    "start": "electron . --gtk-version=3"
  },
  "author": "YCL",
  "license": "MIT",
  "build": {
    "appId": "cool.ycl.desktop.browser",
    "copyright": "Copyright (C) 2025 YCL",
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!resources/**/*",
      "!.git/**/*",
      "!LICENSE",
      "!README.md",
      "!package-lock.json"
    ],
    "asar": true,
    "win": {
      "icon": "icons/icon.ico",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "icon": "icons/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    }
  }
}
